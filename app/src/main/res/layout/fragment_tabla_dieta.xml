<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".tablaDieta">

    <TableLayout
        android:id="@+id/tableLayoutHorarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"> <!-- Elimina la restricciÃ³n inferior para que no quede centrado -->

    <!-- Fila de encabezado -->
    <TableRow>

        <!-- Celda del encabezado para "Nombre" -->
        <TextView
            android:text="Nombre"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Celda del encabezado para "Hora" -->
        <TextView
            android:text="Hora"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <!-- Fila de ejemplo con datos -->
    <TableRow/>

</TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
